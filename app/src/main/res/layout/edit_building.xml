<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgFromPhone"
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="5dp"
        android:text="Edit Building"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/getEditedPic"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="Capture Building" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editTextDes"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <Switch
        android:id="@+id/editNewBld"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Is It a New Building"
        android:padding="10dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/satOpen"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Saturday Opening (YYYY-MM-DD hh:mm)"
        android:inputType="textPersonName"
        android:padding="10dp" />
    <EditText
        android:id="@+id/satClose"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Saturday Closing (YYYY-MM-DD hh:mm)"
        android:inputType="textPersonName"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/sunOpen"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Sunday Opening (YYYY-MM-DD hh:mm)"
        android:inputType="textPersonName"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/sunClose"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Sunday Closing (YYYY-MM-DD hh:mm)"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/editBtnSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="Save"
            />

        <Button
            android:id="@+id/editBtnCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="Cancel"
            />

    </LinearLayout>


</LinearLayout>
</ScrollView>