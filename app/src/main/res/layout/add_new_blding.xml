<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFromPhone"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="5dp"
            android:text="Add Building"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/getNewPic"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Capture Building" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Building Name"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/editTextDes"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:padding="10dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/AddBtnSave"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="Save"
                />

            <Button
                android:id="@+id/AddBtnCancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="Cancel"
                />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
