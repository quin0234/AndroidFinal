<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFromFone"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="5dp"
            android:text="Add Building"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/AddPicPhone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="Photo"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                />

            <Button
                android:id="@+id/AddPicGallery"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="Gallery"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                />

        </LinearLayout>





        <EditText
            android:id="@+id/newBldingName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Building Name"
            android:padding="10dp"/>


        <EditText
            android:id="@+id/newBldingAddress"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:padding="10dp"/>


        <Button
            android:id="@+id/AddBtnSave"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Save"
            android:background="@color/colorAccent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/getNewPic"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Save with Photo"
            android:background="@color/colorAccent"
            android:drawableLeft="@drawable/ic_camera_enhance_white_24px"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/AddBtnCancel"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Canel"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>
